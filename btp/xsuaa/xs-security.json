{
  "xsappname": "lms",
  "tenant-mode": "shared",
  "oauth2-configuration": {
    "redirect-uris" : [
      "https://*.us10-001.hana.ondemand.com/login/callback" ,
      "https://*.us10-001.hana.ondemand.com/**"
    ]
  },
  "scopes": [
    {
      "name": "$XSAPPNAME.Admin",
      "description": "View system info about application"
    },
    {
      "name": "$XSAPPNAME.Callback",
      "description": "With this scope set, the callbacks for subscribe, unsubscribe and getDependencies can be called.",
      "grant-as-authority-to-apps": [
        "$XSAPPNAME(application,sap-provisioning,tenant-onboarding)"
      ]
    },
    {
      "name": "$XSAPPNAME.Manager",
      "description": "View actuator endpoints"
    },
    {
      "name": "$XSAPPNAME.Student",
      "description": "Enroll to courses or unenroll from them, manage their content"
    }
  ],
  "role-templates": [
    {
      "name": "Admin",
      "description": "Admin of LMS",
      "scope-references": ["$XSAPPNAME.Admin"]
    },
    {
      "name": "Manager",
      "description": "Manager of LMS",
      "scope-references": ["$XSAPPNAME.Student", "$XSAPPNAME.Manager"]
    },
    {
      "name": "Student",
      "description": "Student of LMS",
      "scope-references": ["$XSAPPNAME.Student"]
    }
  ]
}