<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <include file="/db/changelog/v1.0/shared-properties.xml"/>

    <changeSet id="create-course-table" author="polinatonko">

        <createTable tableName="course">
            <column name="id" type="uuid" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="price" type="number"/>
            <column name="coins_paid" type="number" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>