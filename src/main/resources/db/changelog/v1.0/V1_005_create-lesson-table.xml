<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <include file="/db/changelog/v1.0/shared-properties.xml"/>

    <changeSet id="create-lesson-table" author="polinatonko">

        <createTable tableName="lesson">
            <column name="id" type="uuid" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="int"/>
            <column name="course_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="lesson" baseColumnNames="course_id"
                                 constraintName="fk_lesson_course"
                                 referencedTableName="course" referencedColumnNames="id"
                                 onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>