<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <include file="/db/changelog/init/shared-properties.xml"/>

    <changeSet id="create-course-settings-table" author="polinatonko">

        <createTable tableName="course_settings">
            <column name="id" type="uuid" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="start_date" type="datetime"/>
            <column name="end_date" type="datetime"/>
            <column name="is_public" type="bool" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="course_settings" baseColumnNames="id"
                                 constraintName="fk_course_settings"
                                 referencedTableName="course" referencedColumnNames="id"
                                 onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>